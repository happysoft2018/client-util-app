{
  "name": "my-node-client-util-app",
  "version": "1.0.0",
  "description": "로컬환경에서 사용하는 각종 유틸리티 모음",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "node app.js",
    "build": "pkg . --public --no-native-build --compress GZip"
  },
  "bin": {
    "my-node-client-util-app": "app.js"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js"
    ],
    "assets": [
      "config/dbinfo.json",
      "request_resources/**/*",
      "templet/**/*",
      "README.md",
      "README_KR.md"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "ignore": [
      "node_modules/open/xdg-open"
    ]
  },
  "dependencies": {
    "csv-parser": "^3.0.0",
    "mssql": "^9.0.1",
    "mysql2": "^3.4.0",
    "oracledb": "^6.0.5",
    "pg": "^8.11.3",
    "telnet-client": "^2.2.5"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
