{
  "name": "client-util-app",
  "version": "1.3.6",
  "description": "로컬환경에서 사용하는 각종 유틸리티 모음",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "node app.js",
    "build": "node -e \"const pkg = require('./package.json'); const { execSync } = require('child_process'); execSync(`pkg app.js --public --compress GZip --target node18-win-x64 --output dist/client-util-app-v${pkg.version}.exe`, { stdio: 'inherit' });\""
  },
  "bin": {
    "my-node-client-util-app": "app.js"
  },
  "pkg": {
    "scripts": [
      "app.js",
      "src/**/*.js"
    ],
    "assets": [
      "config/**/*.json",
      "request_resources/**/*",
      "README.md",
      "README_KR.md",
      "USER_MANUAL.md",
      "USER_MANUAL_KR.md",
      "CHANGELOG.md",
      "CHANGELOG_KR.md",
      "node_modules/mssql/**/*",
      "node_modules/tedious/**/*",
      "node_modules/mysql2/**/*",
      "node_modules/pg/**/*",
      "node_modules/oracledb/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "ignore": [
      "node_modules/open/xdg-open"
    ]
  },
  "dependencies": {
    "csv-parser": "^3.0.0",
    "mssql": "^9.0.1",
    "mysql2": "^3.4.0",
    "oracledb": "^6.0.5",
    "pg": "^8.11.3",
    "telnet-client": "^2.2.5"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
